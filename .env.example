# Environment Variables Template for RAG Chatbot
# Copy this file to .env and fill in your actual API keys

# Gemini API Key (Required for AI functionality)
# Get from: https://aistudio.google.com/ (click "Get API Key")
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model Configuration (gemini-1.5-flash is the cheapest and fastest option)
GEMINI_MODEL=gemini-1.5-flash

# Flask Configuration (Optional - defaults are provided)
FLASK_ENV=development
FLASK_DEBUG=True

# Session Configuration (Optional - default is provided)
SECRET_KEY=rag-chatbot-secret-key-change-in-production-2025
